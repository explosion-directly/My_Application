<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="请完善以下信息"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="取件时间"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择骑手上门时间"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="取件地址"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#696969"
                        android:maxWidth="200dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfasdfasdfasdfsdfasdfasdfsdfasdfasdsdfasdfasasdfasdfsadfasdf"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="联系电话"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#3C3C3C"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02342134324"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微\t 信\t 号"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:hint="请填写收货人的微信号"
                        android:textColor="#3C3C3C"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配\t 送\t 费"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#FF7827"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="250"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="支付方式"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="在线支付，更加优惠"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="14"
                    android:background="@drawable/activity_six_bt_bg"
                    android:textSize="20sp"
                    android:text="确认"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>