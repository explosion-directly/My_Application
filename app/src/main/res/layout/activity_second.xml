<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:weightSum="14">

        <ImageView
            android:background="@drawable/second_activity_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="请输入国内快递单号查询包裹信息"
            android:textColor="#A6A6A6"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15.5"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Button

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="立即查询"
                android:textColor="#F9FCFC"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="17">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon_haiyun"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/second_activity_haiyun_illustration" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="海运说明"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon_my_package"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/second_activity_my_package" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="我的包裹"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon_my_order"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/second_activity_my_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="我的订单"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
               android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_weight="15"
                    android:id="@+id/tv_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="1.请您确定快递单号后尽早来查询，确认登记或认领"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <TextView
                android:layout_weight="14.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2.确认登记或认领"
                android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_weight="14.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3.如有疑问请直接咨询客服"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="14.8">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.国内物流快递查询，请点击:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_web_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:text="https://m.kuai100.com"
                        android:textColor="#ff0000"
                        android:textColorLink="@android:color/holo_red_light"
                        android:textIsSelectable="true"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>