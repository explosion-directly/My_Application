<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:background="#F2F2F2"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="16">

        <LinearLayout
            android:background="@drawable/sharp_activity_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:weightSum="8"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/iv_activity_four_view"
                        android:paddingTop="20dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >
                    <TextView
                        android:id="@+id/tv_activity_four_notice"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="包裹已经寄出"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_activity_four_msg"
                        android:layout_gravity="center"
                        android:textColor="#6c6c6c"
                        android:textSize="14sp"
                        android:text="你的包裹已经寄出，记得查看物流状态哦！"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >
                    <Button
                        android:id="@+id/bt_activity_four_consultion"
                        android:textSize="14sp"
                        android:textColor="#6c6c6c"
                        android:background="@drawable/shape_activity_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在线咨询"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_activity_four_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州市驻村中东新街七巷三号店"
                    android:textSize="13sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_addr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:civ_border_width="2dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:id="@+id/profile_image_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:civ_border_width="2dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="#F2F2F2"
        android:layout_weight="4.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:weightSum="16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
    <LinearLayout
        android:background="@drawable/sharp_activity_background"
        android:layout_weight="14"
        android:orientation="vertical"
        android:weightSum="13"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="订单价格"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_activity_order_price"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15"
                android:textSize="16sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text="实付价格"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="$15"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="寄件地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_activity_four_sending_addr"
                android:ems="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="asdfasdfasdfasd阿萨德法师打发斯蒂芬阿斯顿发"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="收件地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_activity_four_getting_addr"
                android:maxLines="2"
                android:ellipsize="end"
                android:ems="2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="asdfasdfasdfasd阿萨德法师打发斯蒂芬阿斯顿发"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="订单编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_activity_four_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:text="15464646546564"
                android:textColor="#77C8E1"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="下单时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_activity_four_order_time"
                android:textColor="#000000"
                android:ems="2"
                android:textSize="16sp"
                android:text="2016-01-12 06:30:21"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="9dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="快递单号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_activity_four_delivery_style"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百世快递"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_activity_four_delivery_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15464646546564"
                    android:textSize="13sp"
                    android:textColor="#77C8E1"/>
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_launcher"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="1dp"/>

    </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
</LinearLayout>